<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body class="d-flex flex-column min-vh-100">
        <!-- Navbar -->
        <%- include('./partials/nav.ejs') %>

            <!-- Main Content -->
            <div class="container text-center mt-4 flex-grow-1">
                <h1>Your Schedule</h1>

                <% if (user && user.studentOrTeacher==='student' ) { %>
                    <% if (user.schedule && user.schedule.length> 0) { %>
                        <div class="accordion" id="accordionExample">
                            <% user.schedule.forEach((course, index)=> { %>
                                <% if (course) { %>
                                    <% console.log(course) %>
                                        <% console.log(course.name) %>
                                            <p>Name: <%= course.name %>
                                            </p>
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed" type="button"
                                                        data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>"
                                                        aria-expanded="false" aria-controls="collapse<%= index %>">
                                                        <%= course.courseId %>: <%= course.name %>
                                                    </button>
                                                </h2>
                                                <div id="collapse<%= index %>" class="accordion-collapse collapse"
                                                    data-bs-parent="#accordionExample">
                                                    <div class="accordion-body">
                                                        Course ID: <%= course.courseId %><br>
                                                            Name: <%= course.name %><br>
                                                                Subject Area: <%= course.subject %><br>
                                                                    Credits: <%= course.credits %><br>
                                                                        Description: <%= course.description %><br>
                                                    </div>
                                                    <form action="/schedule/drop" method="POST"
                                                        style="display:inline;">
                                                        <input type="hidden" name="courseId" value="<%= course._id %>">
                                                        <button type="submit" class="btn btn-danger">Drop</button>
                                                    </form>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <p>Course not found.</p>
                                                <% } %>
                                                    <% }) %>
                        </div>
                        <% } else { %>
                            <p>Your schedule is empty. Add some courses!</p>
                            <% } %>
                                <% } %>
            </div>

            <!-- Footer -->
            <%- include('./partials/footer.ejs') %>

                <!-- Bootstrap JS -->
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>