<!-- Main landing webpage with navigation, and login  -->

<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <%- include('./partials/nav.ejs') %>

    <!-- Main Content -->
    <div class="container text-center mt-4 flex-grow-1">
        <h1>Login to sign up for classes today!</h1>

        <!-- Login Form -->
        <div class="card mx-auto mt-4" style="max-width: 400px;">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter your password">
                    </div>
                    <button id="login" type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                    <button id="register" type="submit" class="btn btn-primary w-100">Register</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>